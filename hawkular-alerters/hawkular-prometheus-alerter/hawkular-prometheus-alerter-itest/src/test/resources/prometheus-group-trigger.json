{
  "triggers":[
    {
      "trigger":{
        "type": "GROUP",
        "id": "prom-group-trigger",
        "name": "Prometheus Group Trigger",
        "description": "Alert on any http GET with activity in the last 5 minutes, check every 5 seconds. AutoDisable after 1 alert.",
        "severity": "HIGH",
        "enabled": true,
        "autoDisable": true,
        "tags": {
          "prometheus": "Test"
        },
        "context": {
          "prometheus.frequency": "5"
        }
      },
      "conditions":[
        {
          "type": "EXTERNAL",
          "alerterId": "prometheus",
          "dataId": "group-dataId",
          "expression": "rate(http_requests_total{handler=\"query\",code=\"$CODE\",job=\"$JOB\"}[5m])>0"
        }
      ]
    }
  ]
}
